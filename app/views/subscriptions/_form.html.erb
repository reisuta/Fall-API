<%= form_with(model: @subscription, local: true) do |f| %>
    <%= render "shared/error_messages", model: @subscription %>
    <div class="form-group mb-3">
      <%= f.label :name, 'サブスクリプション名', class: 'form-label background-color' %>
      <%= f.text_field :name, class: 'form-control', readonly: action==='show' %>
    </div>
  
    <div class="form-group mb-3">
      <%= f.label :month_cost, '月額料金', class: 'form-label background-color' %>
      <%= f.number_field :month_cost, class: 'form-control', readonly: action==='show' %>
    </div>
  
    <div class="form-group mb-3">
      <%= f.label :importance, '重要性', class: 'form-label background-color' %>
      <%= f.text_field :importance, class: 'form-control', readonly: action==='show' %>
    </div>
  
    <div class="form-group mb-3">
      <%= f.label :alternative, '代替手段', class: 'form-label background-color' %>
      <%= f.text_area :alternative, class: 'form-control', readonly: action==='show' %>
    </div>
  
    <div class="form-group mb-3">
      <% if action==='show' %>
        <%= link_to '編集', edit_subscription_path(@subscription.id), class: 'btn btn-primary' %>
      <% else %>
        <%= f.submit "#{ @subscription.new_record? ? '新規作成' : '更新' }", class: 'mt-3 btn btn-primary' %>
      <% end %>
    </div>
  <% end %>
  