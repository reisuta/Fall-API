<%= form_with(model: @category, local: true) do |f| %>
    <%= render "shared/error_messages", model: @category %>
    <div class="form-group mb-3">
      <%= f.label :name, 'カテゴリー名', class: 'form-label background-color' %>
      <%= f.text_field :name, class: 'form-control', readonly: action==='show' %>
    </div>
  
    <div class="form-group mb-3">
      <% if action==='show' %>
        <%= link_to '編集', edit_category_path(@category.id), class: 'btn btn-primary' %>
      <% else %>
        <%= f.submit "#{ @category.new_record? ? '新規作成' : '更新' }", class: 'mt-3 btn btn-primary' %>
      <% end %>
    </div>
  <% end %>
  