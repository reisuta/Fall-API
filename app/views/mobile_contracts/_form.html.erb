<%= form_with(model: @mobile_contract, local: true) do |f| %>
    <%= render "shared/error_messages", model: @mobile_contract %>
    <div class="form-group mb-3">
      <%= f.label :company_name, '契約会社名', class: 'form-label background-color' %>
      <%= f.text_field :company_name, class: 'form-control', readonly: action==='show' %>
    </div>
  
    <div class="form-group mb-3">
      <%= f.label :month_cost, '月額料金', class: 'form-label background-color' %>
      <%= f.number_field :month_cost, class: 'form-control', readonly: action==='show' %>
    </div>
  
    <div class="form-group mb-3">
      <%= f.label :cancel_cost, '解約金', class: 'form-label background-color' %>
      <%= f.number_field :cancel_cost, class: 'form-control', readonly: action==='show' %>
    </div>
  
    <div class="form-group mb-3">
      <%= f.label :contract_detail, '契約詳細', class: 'form-label background-color' %>
      <%= f.text_field :contract_detail, class: 'form-control', readonly: action==='show' %>
    </div>
  
    <div class="form-group mb-3">
      <%= f.label :started_at, '開始日時', class: 'form-label background-color' %>
      <%= f.datetime_field :started_at, class: 'form-control', readonly: action==='show' %>
    </div>
  
    <div class="form-group mb-3">
      <%= f.label :ended_at, '終了日時', class: 'form-label background-color' %>
      <%= f.datetime_field :ended_at, class: 'form-control', readonly: action==='show' %>
    </div>
  
    <div class="form-group mb-3">
      <% if action==='show' %>
        <%= link_to '編集', edit_mobile_contract_path(@mobile_contract.id), class: 'btn btn-primary' %>
      <% else %>
        <%= f.submit "#{ @mobile_contract.new_record? ? '新規作成' : '更新' }", class: 'mt-3 btn btn-primary' %>
      <% end %>
    </div>
  <% end %>
  